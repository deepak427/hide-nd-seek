{
  "private": true,
  "name": "hide-nd-seek",
  "version": "0.0.0",
  "license": "BSD-3-Clause",
  "type": "module",
  "scripts": {
    "postinstall": "npm run build:client && npm run build:server",
    "build:client": "cd src/client && vite build",
    "build:server": "cd src/server && vite build",
    "build": "npm run build:client && npm run build:server",
    "build:prod": "NODE_ENV=production npm run build",
    "check": "npm run type-check && npm run lint:fix && npm run prettier",
    "deploy": "npm run build && devvit upload",
    "deploy:prod": "npm run build:prod && devvit upload",
    "dev": "concurrently -k -p \"[{name}]\" -n \"CLIENT,SERVER,DEVVIT\" -c \"blue,green,magenta\" \"npm run dev:client\" \"npm run dev:server\" \"npm run dev:devvit\"",
    "dev:client": "cd src/client && vite build --watch",
    "dev:devvit": "dotenv -e config/development.env -- devvit playtest",
    "dev:server": "cd src/server && vite build --watch",
    "dev:prod": "NODE_ENV=production concurrently -k -p \"[{name}]\" -n \"CLIENT,SERVER,DEVVIT\" -c \"blue,green,magenta\" \"npm run dev:client\" \"npm run dev:server\" \"npm run dev:devvit:prod\"",
    "dev:devvit:prod": "dotenv -e config/production.env -- devvit playtest",
    "start": "dotenv -e config/development.env -- node dist/server/index.cjs",
    "start:prod": "NODE_ENV=production dotenv -e config/production.env -- node dist/server/index.cjs",
    "start:test": "NODE_ENV=test dotenv -e config/test.env -- node dist/server/index.cjs",
    "lint": "eslint ./src",
    "lint:fix": "eslint --fix ./src",
    "login": "devvit login --copy-paste",
    "launch": "npm run build && npm run deploy && devvit publish",
    "launch:prod": "npm run build:prod && npm run deploy:prod && devvit publish",
    "prettier": "prettier-package-json --write ./package.json && prettier --write .",
    "test": "NODE_ENV=test vitest --run",
    "test:watch": "NODE_ENV=test vitest",
    "test:coverage": "NODE_ENV=test vitest --run --coverage",
    "test:unit": "NODE_ENV=test vitest --run src/test/unit",
    "test:integration": "NODE_ENV=test vitest --run src/test/integration",
    "test:e2e": "NODE_ENV=test vitest --run src/test/e2e",
    "config:validate": "node -e \"require('./dist/server/index.cjs'); console.log('Configuration validation passed')\"",
    "config:show": "node -e \"const {config} = require('./dist/shared/config/ConfigLoader'); console.log(JSON.stringify(config.getConfigSummary(), null, 2))\"",
    "type-check": "tsc --build"
  },
  "dependencies": {
    "@devvit/web": "0.12.1",
    "devvit": "0.12.1",
    "express": "5.1.0",
    "phaser": "3.88.2",
    "uuid": "^13.0.0"
  },
  "devDependencies": {
    "@eslint/js": "9.23.0",
    "@types/express": "5.0.1",
    "@types/uuid": "^10.0.0",
    "concurrently": "9.1.2",
    "dotenv-cli": "8.0.0",
    "eslint": "9.23.0",
    "globals": "15.15.0",
    "prettier": "3.5.3",
    "prettier-package-json": "2.8.0",
    "terser": "5.39.0",
    "typescript": "5.8.2",
    "typescript-eslint": "8.29.0",
    "vite": "6.2.4",
    "vitest": "3.1.1"
  }
}
