# Test Environment Configuration
NODE_ENV=test

# Server Configuration
WEBBIT_PORT=3001
SERVER_HOST=localhost
CORS_ORIGINS=http://localhost:3001
REQUEST_TIMEOUT=10000
BODY_LIMIT=1mb

# Redis Database Configuration
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_DATABASE=1
REDIS_KEY_PREFIX=test_hide_seek:
REDIS_MAX_RETRIES=2
REDIS_RETRY_DELAY=500
REDIS_CONNECTION_TIMEOUT=3000

# Storage Configuration
DATA_EXPIRATION_DAYS=1
CLEANUP_INTERVAL_HOURS=1
ENABLE_SCHEDULED_CLEANUP=false
PERFORM_INITIAL_HEALTH_CHECK=false
MAX_GUESSES_PER_USER=5
RATE_LIMIT_WINDOW_MS=10000

# Monitoring Configuration
ENABLE_ERROR_TRACKING=false
ENABLE_PERFORMANCE_MONITORING=false
ENABLE_ANALYTICS=false
LOG_LEVEL=error
METRICS_COLLECTION_INTERVAL=10000

# Feature Flags
ENABLE_GUESS_DASHBOARD=true
ENABLE_RATE_LIMITING=false
ENABLE_DATA_CLEANUP=false
ENABLE_PERFORMANCE_METRICS=false
ENABLE_USER_ANALYTICS=false
ENABLE_ADVANCED_ERROR_HANDLING=true
ENABLE_CACHING=false
MAX_CONCURRENT_GAMES=10

# Reddit/Devvit Configuration
DEVVIT_SUBREDDIT=r/hide_nd_seek_dev2