# Development Environment Configuration
NODE_ENV=development

# Server Configuration
WEBBIT_PORT=3000
SERVER_HOST=localhost
CORS_ORIGINS=http://localhost:3000,http://localhost:5173
REQUEST_TIMEOUT=30000
BODY_LIMIT=10mb

# Redis Database Configuration
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_DATABASE=0
REDIS_KEY_PREFIX=hide_seek_dev:
REDIS_MAX_RETRIES=3
REDIS_RETRY_DELAY=1000
REDIS_CONNECTION_TIMEOUT=5000

# Storage Configuration
DATA_EXPIRATION_DAYS=30
CLEANUP_INTERVAL_HOURS=24
ENABLE_SCHEDULED_CLEANUP=true
PERFORM_INITIAL_HEALTH_CHECK=true
MAX_GUESSES_PER_USER=10
RATE_LIMIT_WINDOW_MS=60000

# Monitoring Configuration
ENABLE_ERROR_TRACKING=false
ENABLE_PERFORMANCE_MONITORING=false
ENABLE_ANALYTICS=false
LOG_LEVEL=debug
METRICS_COLLECTION_INTERVAL=30000

# Feature Flags
ENABLE_GUESS_DASHBOARD=true
ENABLE_RATE_LIMITING=true
ENABLE_DATA_CLEANUP=true
ENABLE_PERFORMANCE_METRICS=true
ENABLE_USER_ANALYTICS=false
ENABLE_ADVANCED_ERROR_HANDLING=true
ENABLE_CACHING=false
MAX_CONCURRENT_GAMES=100

# Reddit/Devvit Configuration
DEVVIT_SUBREDDIT=r/hide_nd_seek_dev2