# Production Environment Configuration
NODE_ENV=production

# Server Configuration
WEBBIT_PORT=3000
SERVER_HOST=0.0.0.0
CORS_ORIGINS=https://reddit.com,https://www.reddit.com
REQUEST_TIMEOUT=30000
BODY_LIMIT=10mb

# Redis Database Configuration
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_DATABASE=0
REDIS_KEY_PREFIX=hide_seek:
REDIS_MAX_RETRIES=5
REDIS_RETRY_DELAY=2000
REDIS_CONNECTION_TIMEOUT=10000

# Storage Configuration
DATA_EXPIRATION_DAYS=30
CLEANUP_INTERVAL_HOURS=24
ENABLE_SCHEDULED_CLEANUP=true
PERFORM_INITIAL_HEALTH_CHECK=true
MAX_GUESSES_PER_USER=10
RATE_LIMIT_WINDOW_MS=60000

# Monitoring Configuration
ENABLE_ERROR_TRACKING=true
ENABLE_PERFORMANCE_MONITORING=true
ENABLE_ANALYTICS=true
LOG_LEVEL=warn
METRICS_COLLECTION_INTERVAL=300000

# Feature Flags
ENABLE_GUESS_DASHBOARD=true
ENABLE_RATE_LIMITING=true
ENABLE_DATA_CLEANUP=true
ENABLE_PERFORMANCE_METRICS=true
ENABLE_USER_ANALYTICS=true
ENABLE_ADVANCED_ERROR_HANDLING=true
ENABLE_CACHING=true
MAX_CONCURRENT_GAMES=10000

# Reddit/Devvit Configuration (set in production deployment)
# DEVVIT_SUBREDDIT=r/hide_nd_seek_dev2